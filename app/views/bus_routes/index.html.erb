<div class="container mt-3">
  <h2 >Bus Routes</h2>            
  <table class="table table-striped table-bordered table-hover table-info">
    <thead class="text-center">
      <tr>
        <th>ID</th>
        <th>FROM CITY</th>
        <th>TO CITY</th>
        <th style="color: red;">Action Buttons</th>
      </tr>
    </thead>
    <tbody>
    <% @bus_routes.each do |a| %>
      <tr class="text-center">
        <td><%= a.id %></td>
        <td><%= a.from_city.name %></td>
        <td><%= a.to_city.name %></td>     
        <td><%= link_to "Show Buses", new_bus_route_path, :class => "btn btn-primary" %>
         <%= link_to "Update Route", new_bus_route_path, :class => "btn btn-success" %>
         <%= link_to "Delete Route", new_bus_route_path, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
    </tbody> 
  </table>
  <div class="btn btn-primary">
    <%= link_to "Create Routes", new_bus_route_path, :class => "btn btn-primary" %>
  </div>
</div>